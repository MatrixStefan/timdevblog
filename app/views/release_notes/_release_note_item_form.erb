<div class="release-note-type release-note-item-form-container">
  <%= f.hidden_field :release_note_id, value: f.object.id %>

  <div class="release-note-item-form-change-type">
    <%= f.input :change_type_id, collection: ChangeType.all, allow_blank: false, html: {class: 'form-control input-sm'} %>
  </div>

  <div class="release-note-item-form-change-title">
    <%= f.input :change_title, html: {class: 'form-control input-sm'} %>
  </div>


  <div class="release-note-item-form-change-details">
    <%= f.input :change_details, html: {class: 'form-control input-sm'} %>
  </div>

  <div class="release-note-item-add-button">
    <%= link_to_remove_association f do%>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </div>

</div>